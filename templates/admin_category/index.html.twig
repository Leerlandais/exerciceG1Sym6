{% extends 'admin/index.html.twig' %}

{% block title %}New Tag{% endblock %}
    {% block sideBar %}{% endblock %}
{% block mainBody %}
<div class="d-flex flex-column align-items-center text-center mb-5 pb-5">
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category_title</th>
                <th>Category_slug</th>
                <th>Category_description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.categoryTitle }}</td>
                <td>{{ category.categorySlug }}</td>
                <td>{{ category.categoryDescription }}</td>
                <td>
                    <a href="{{ path('app_admin_category_show', {'id': category.id}) }}">show</a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_new') }}">Create new</a>
</div>
{% endblock %}
