{% block sideBar %}
    <section class="section-sm">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8  mb-5 mb-lg-0">
                    <h2 class="h5 section-title">Recent Post</h2>

                    {% for post in posts %}

                        <article class="card mb-4">
                            <div class="post-slider">
                                <img src="{{ asset(post.postImgLoc | default('https://placehold.co/730x365')) }}" class="card-img-top" alt="post-thumb">
                            </div>
                            <div class="card-body">
                                <h3 class="mb-3"><a class="post-title" href="{{ path('app_post_show', {id: post.id}) }}">{{ post.postTitle }}</a></h3>
                                <ul class="card-meta list-inline">
                                    <li class="list-inline-item">
                                        <a href="{{ path('app_author', {id: post.user.id}) }}" class="card-meta-author">
                                            <img src="{{ asset(post.user.userImgLoc) }}" alt="{{ post.user.userRealName }}">
                                            <span>{{ post.user.userRealName }}</span>
                                        </a>
                                    </li>
                                    <li class="list-inline-item">
                                        <i class="ti-timer"></i>2 Min To Read
                                    </li>
                                    <li class="list-inline-item">
                                        <i class="ti-calendar"></i>14 jan, 2020
                                    </li>
                                    <li class="list-inline-item">
                                        <ul class="card-meta-tag list-inline">
                                            <li class="list-inline-item"><a href="tags.html">City</a></li>
                                            <li class="list-inline-item"><a href="tags.html">Food</a></li>
                                            <li class="list-inline-item"><a href="tags.html">Taste</a></li>
                                        </ul>
                                    </li>
                                </ul>
                                <p>{{ post.postText }}</p>
                                <a href="{{ path('app_post_show', {id: post.id}) }}" class="btn btn-outline-primary">Read More</a>
                            </div>
                        </article>
                    {% endfor %}

                    <ul class="pagination justify-content-center">
                        <li class="page-item page-item active ">
                            <a href="#!" class="page-link">1</a>
                        </li>
                        <li class="page-item">
                            <a href="#!" class="page-link">2</a>
                        </li>
                        <li class="page-item">
                            <a href="#!" class="page-link">&raquo;</a>
                        </li>
                    </ul>
                </div>
                <aside class="col-lg-4 sidebar-home">

                    <!-- authors -->
                    <div class="widget widget-author">
                        <h4 class="widget-title">Authors</h4>

                        {% for user in users %}
                        <div class="media align-items-center">
                            <div class="mr-3">
                                <img class="widget-author-image" src="{{ asset(user.userImgLoc) }}">
                            </div>
                            <div class="media-body">
                                <h5 class="mb-1"><a class="post-title" href="{{ path('app_author', {id: user.id}) }}">{{ user.userRealName }}</a></h5>
                                <span>{{ user.userDetails }}</span>
                            </div>
                        </div>
                        {% endfor %}
                    </div>


                    <!-- categories -->
                    <div class="widget widget-categories">
                        <h4 class="widget-title"><span>Categories</span></h4>
                        <ul class="list-unstyled widget-list">
                            {% for sect in sections %}
                                <li><a href="{{ path('app_section', {id: sect.id}) }}" class="d-flex">{{ sect.sectionTitle }}<small class="ml-auto">(4)</small></a></li>
                            {% endfor %}
                        </ul>
                    </div><!-- tags -->
                    <div class="widget">
                        <h4 class="widget-title"><span>Tags</span></h4>
                        <ul class="list-inline widget-list-inline widget-card">
                            {% for tag in tags %}
                                <li class="list-inline-item"><a href="{{ path('app_tag', {id: tag.id}) }}">{{ tag.tagName }}</a></li>
                            {% endfor %}
                        </ul>
                    </div><!-- recent post -->
                    <div class="widget">
                        <h4 class="widget-title">Recent Post</h4>

                        <!-- post-item -->
                        <article class="widget-card">
                            <div class="d-flex">
                                <img class="card-img-sm" src="{{ asset('images/post/post-10.jpg') }}">
                                <div class="ml-3">
                                    <h5><a class="post-title" href="post/elements/">Elements That You Can Use In This Template.</a></h5>
                                    <ul class="card-meta list-inline mb-0">
                                        <li class="list-inline-item mb-0">
                                            <i class="ti-calendar"></i>15 jan, 2020
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </article>

                        <article class="widget-card">
                            <div class="d-flex">
                                <img class="card-img-sm" src="{{ asset('images/post/post-3.jpg') }}">
                                <div class="ml-3">
                                    <h5><a class="post-title" href="post-details.html">Advice From a Twenty Something</a></h5>
                                    <ul class="card-meta list-inline mb-0">
                                        <li class="list-inline-item mb-0">
